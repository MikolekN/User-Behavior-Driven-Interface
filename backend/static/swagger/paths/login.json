{
    "post": {
        "summary": "Login a user",
        "requestBody": {
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "login": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "login",
                            "password"
                        ]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Successful login",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "user": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "string"
                                        },
                                        "login": {
                                            "type": "string"
                                        },
                                        "created": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "401": {
                "description": "Invalid login or password"
            },
            "409": {
                "description": "Already logged in"
            },
            "404": {
                "description": "User does not exist"
            }
        }
    }
}